{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./dist",
    "lib": ["esnext"],
    "types": ["node"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": [
    "index.ts",
    "config//*.ts",
    "controllers//*.ts",
    "routes//*.ts",
    "models//*.ts"
  ],
  "exclude": ["node_modules"]
}